1. 1-100的奇数合
*/
# include <stdio.h>
int main (void)
{
 int i;
 int sum = 0;
 
 for (i=1; i<101; ++i)
 {
    if( i %2 ==1）
        sum += i;
 }
 printf("sum = %d\n", sum);
  return 0;
}

/*
2. 1-100之间奇数的个数
*/
# include <stdio.h>
int main (void)
{
 int i;
 int cnt = 0;
 
 for (i=1; i<101; ++i)
 {
    if( i %2 ==1）
        ++cnt;
 }
 printf("sum = %d\n", sum);
  return 0;
}

/*
3. 1-100之间的奇数的平均值
*/
# include <stdio.h>
int main (void)
{
 int i;
 int sum = 0;
 int cnt = 0;
 float avg = 0;
 for (i=1; i<101; ++i)
 {
    if( i %2 ==1）
       { sum += i;
        ++cnt;
        }//if只能控制一个语句啊！！！所以在这里是和if没关系的啊啊啊啊
 }
 avg = (float) sum / cnt; //或者 avg = 1.0*sum / cnt;
 printf("average = %f\n", avg);
  return 0;
}
